---
const { shortText } = Astro.props
---

<div class="copyright-notice">
	<ul>
		<li>
			<span class="icon icon-[mdi--copyright]" />
			2024
			<a href="https://matiboux.me" target="_blank">
				Matiboux
			</a>
		</li>
		<li>
			<span class="icon icon-[mdi--star-outline]" />
			Built with
			<a href="https://starlight.astro.build/" target="_blank">
				Starlight
			</a>
		</li>
		<li>
			<span class="icon icon-[mdi--contract-outline]" />
			{shortText
				? <>
					<span class="md:hidden">Content licensed under</span>
					<span class="hidden md:inline"><!-- Content --> Licensed under</span>
				</>
				: <>
					Content licensed under
				</>
			}
			<a href="https://creativecommons.org/licenses/by-sa/4.0/" target="_blank" rel="noopener noreferrer">
				<img
					src="https://mirrors.creativecommons.org/presskit/buttons/80x15/svg/by-sa.svg"
					alt="CC BY-SA 4.0 License"
					class="license-icon"
				/>
			</a>
		</li>
	</ul>
</div>

<style lang="scss">
	.copyright-notice {
		font-size: var(--sl-text-sm);
		color: var(--sl-color-gray-4);

		a {
			color: var(--sl-color-gray-4);
			text-decoration: underline;

			&:hover {
				color: var(--sl-color-gray-3);
				text-decoration: none;
			}
		}

		ul {
			align-items: center;
			padding: 0;
			margin: 0;
			list-style: none;

			li {
				margin: 0;
				padding: 0;
			}
		}

		.icon {
			vertical-align: -0.125em;
		}

		.license-icon {
			display: inline;
			width: 80px;
			height: 15px;
			margin-left: 0.125em;
			margin-right: 0.125em;
			vertical-align: -0.25em;
		}

		&:before {
			// Horizontal line
			content: '';
			display: block;
			background-color: var(--sl-color-gray-6);
			width: calc(100% - 2rem);
			height: 1px;
			margin-bottom: 1rem;
			margin-left: 1rem;
		}
	}
</style>
